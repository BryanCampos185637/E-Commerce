
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LogIn</title>
    <link href="~/lib/bootstrap-5/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/lib/mdbootstrap/css/mdb.min.css" rel="stylesheet" />
<style>
    body {
        font-family:Bahnschrift;
        /*primary =#37474f p-lite= #62727b p-dark= #102027 */
        background: #62727b;
    }
    /*.card {
        background: #102027;
    }
    .btn-primary {
        background: #37474f !important;
        color:white !important;
    }*/
</style>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="offset-md-3 col-md-6 col-sm-12 mt-5">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center">
                            <h3 class="h3">
                                SpartanDevSv
                            </h3>
                            <p>Inicio de sesión</p>
                        </div>
                        <form class="mt-3" id="frmLogin">
                            <div class="form-group">
                                <label>Correo</label>
                                <input type="email" class="form-control" placeholder="Escribe tu correo..." />
                            </div>
                            <div class="form-group">
                                <label>Contraseña</label>
                                <input type="password" class="form-control" placeholder="Escribe tu contraseña..." />
                            </div>
                            <div class="form-group text-center">
                                <input type="submit" class="btn btn-primary" value="Iniciar sesión"/>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/js/peticionHttp.js"></script>
    <script src="~/lib/bootstrap-5/js/bootstrap.min.js"></script>
</body>
</html>
